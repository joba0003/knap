---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
---
<MainLayout title="Titel">

	<Button variant="primary" size="small">Knaptekst 2</Button>
	<Button variant="primary" size="medium">Knaptekst</Button>
	<Button variant="primary" size="large">Knaptekst</Button>
	<Button variant="secondary" size="small">Knaptekst</Button>	

	
<form class="flex flex-col border-2 border-black rounded-lg max-w-md">
	<div class="p-4">
		<label for="antal">Antal:</label>
		<input type="number" id="antal" placeholder="1">
	</div>

	<div class="p-4">
		<span>Levering:</span>
		<label for="postnord" area-checked="checked">Postnord</label> <input type="radio" id="postnord" name="levering">
	    <label for="afhent">Afhent selv</label> <input type="radio" id="afhent" name="levering">
		
	</div>
	<div class="p-4">
		<span>Navn:</span>
		<input type="text" id="navn" class="" placeholder="Navn">
	</div>
	<div class="p-4">
		<span>Adresse:</span>
		<input type="text" id="adresse" placeholder="Adresse">
	</div>
	<div class="p-4">
	<span>Email:</span>
	<input type="text" id="email" placeholder="Email">
</div>
		
	
	<Button variant="primary" size="large">Knaptekst</Button>
</form>

<p>Link til <Link href="https://www.kea.dk" target="_blank" variant="textlink" size="standard">En anden side</Link></p>

<p>Link til <Link href="https://www.kea.dk" target="_blank" variant="primary" size="small">En anden side</Link></p>

<p>Link til <Link href="https://www.kea.dk" target="_blank" variant="primary" size="medium">En anden side</Link></p>

<p>Link til <Link href="https://www.kea.dk" target="_blank" variant="primary" size="large">En anden side</Link></p>

<p>Link til <Link href="https://www.kea.dk" target="_blank" variant="secondary" size="small">En anden side</Link></p>

<p>Link til <Link href="https://www.kea.dk" target="_blank" variant="secondary" size="medium">En anden side</Link></p>

<p>Link til <Link href="https://www.kea.dk" target="_blank" variant="secondary" size="large">En anden side</Link></p>

</MainLayout>