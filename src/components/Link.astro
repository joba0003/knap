---
// Henter parametrene fra Astro. props
const { href="#", target="_self", variant="textlink", size="standard"} = Astro. props;

//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper
const linkStyling = "text-black hover:text-blue-500"; 

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter 
const variantClasses = {
"primary": "bg-red-500",
"secondary": "bg-yellow-500",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const sizeClasses = {
"large": "text-xl",
"medium": "text-2xl",
"small": "text-4xl"
};
---
<a href={href} class="underline" target={target}><slot /></a>

<button class:list={[linkStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>

